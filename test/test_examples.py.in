                    'Test pipeline_stacked_mem.py')
        self.append(self.test_pipeline_unbinned_disk,
                    'Test pipeline_unbinned_disk.py')
        self.append(self.test_pipeline_unbinned_mem,
                    'Test pipeline_unbinned_mem.py')
