#
# Test csresmap
# =============
$ECHO -n "Test csresmap: "
chmod +x @abs_top_srcdir@/scripts/csresmap.py
@abs_top_srcdir@/scripts/csresmap.py \
  inobs="data/crab_events.fits" \
  outmap="resmap.fits" \
  inmodel="data/crab.xml" \
  caldb="irf" \
  irf="cta_dummy_irf" \
  nxpix=50 \
  nypix=50 \
  binsz=0.02 \
  coordsys="CEL" \
  xref=83.63 \
  yref=22.01 \
  proj="CAR" \
  binsz=0.05 > csresmap.log
$ECHO -n "."
