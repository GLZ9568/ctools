#
# Get echo command (to circumvent built-in echo on some systems)
#
ECHO=`which echo`

#
# Print Header
#
$ECHO ""
$ECHO "*****************"
$ECHO "* Test cscripts *"
$ECHO "*****************"


#
# Remove any existing result files
# ================================
rm -rf *.fits *.xml *.dat


#
# Creates pfiles directory
# ========================
mkdir -p pfiles
export PFILES=pfiles


#
# Test cspull
# ===========
$ECHO -n "Test cspull: "
chmod +x @abs_top_srcdir@/scripts/cspull.py
@abs_top_srcdir@/scripts/cspull.py \
  inmodel="data/crab.xml" \
  outfile="pull.dat" \
  ntrials="3" \
  caldb="irf" \
  irf="cta_dummy_irf" \
  ra=83.6331 \
  dec=22.0145 \
  emin=0.1 \
  emax=100.0 \
  enumbins=0 \
  tmax=1800.0 \
  deadc=0.95 \
  rad=5.0 \
  npix=200 \
  binsz=0.05 > cspull.log
$ECHO -n "."
if [ -s "pull.dat" ]
then
  $ECHO -n "."
else
  $ECHO " pull.dat file is not valid"
  exit 1
fi
$ECHO " ok"


